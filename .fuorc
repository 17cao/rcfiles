config = globals()['config']


config.COLLECTIONS_DIR = [
    '~/Dropbox/public/歌曲收藏',
]


def after_app_initialize(app):
    from mpv import _mpv_set_property_string

    # set proxy for mpv ytdl so that we can play youtube video
    #  for example: `fuo play https://www.youtube.com/watch?v=Bsdf_iK8f2M`
    _mpv_set_property_string(app.player._mpv.handle,
                             b'ytdl-raw-options',
                             b'proxy=[http://127.0.0.1:1087]')



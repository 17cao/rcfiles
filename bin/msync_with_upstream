#!/usr/bin/env bash

set -e

echo 'rebase upstream master -ing...'

git status 1>/dev/null 2>&1 || (echo 'ðŸ˜±  not a git repo' && exit 1)

mprogress_bar 0.0
git fetch upstream master 1>/dev/null 2>&1 || ( echo && echo 'ðŸ˜±' && exit 1)
mprogress_bar 0.5
git rebase upstream/master 1>/dev/null 2>&1 || (echo && echo 'ðŸ˜±' && exit 1)
mprogress_bar 1
echo
echo 'ðŸŽ‰'
